<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bot"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orange_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/orange_tv_select"
            android:gravity="center"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/jarpan_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/jarpan_video"
            android:gravity="center"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/three_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/three_video"
            android:gravity="center"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/user_vip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/user_vip"
            android:gravity="center"
            android:textSize="13sp" />

    </LinearLayout>


</RelativeLayout>
